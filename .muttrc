# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#
# ME's personal .muttrc (Mutt 0.92.5)
#
# The format of this file is one command per line.  Everything after a pound
# sign (#) is a comment, unless a backward slash (\) precedes it
#

# Note: $folder should be set _before_ any other path vars where `+' or `='
# is used because paths are expanded when parsed
#
#set folder=~/Mail		# where i keep my mailboxes
#set spoolfile='/var/mail/liam'	# where my new mail is located

mailboxes imaps://scalix.sourcefire.com
#mailboxes imaps://heptadecagram.net
#mailboxes pop://mail.wunderland.com

#set imap_user='liam+heptadecagram.net'
#set folder="imaps://heptadecagram.net/"
#set spoolfile="imaps://heptadecagram.net/inbox"
#set hostname="heptadecagram.net"	# my DNS domain
#set from="Liam Echlin <liam@heptadecagram.net>"
#set certificate_file="~/.ssh/mutt_certificates"
#lists origins besc tribearcane

set imap_user='wechlin'
set folder="imaps://scalix.sourcefire.com/"
set spoolfile="imaps://scalix.sourcefire.com/inbox"
set hostname="gauss.sfeng.sourcefire.com"
set from="Liam Echlin <wechlin@sourcefire.com>"

lists homeoffice firemen
subscribe homeoffice firemen

folder-hook License\ Keys 'set sort=subject'

save-hook '~s \\[Bug' =Bugs/


set postponed=+postponed	# mailbox to store postponed messages in
set record=+outbox		# default location to save outgoing mail

#set pop_user='liam'
#set pop_host='pop://mail.wunderland.com'
#set pop_delete=yes
#set pop_checkinterval=90

set sendmail='/usr/bin/msmtp'

set mail_check=90		# how often to poll for new mail
set timeout=15			# timeout for prompt in the index menu

set abort_unmodified=yes	# automatically abort replies if I don't save
set alias_file=~/.mail_aliases	# where I keep my aliases
source ~/.mail_aliases

unhdr_order *
hdr_order date to cc from subject

set arrow_cursor		# use -> instead of hiliting the whole line
set attribution="%n wrote:"	# how to attribute replies
set autoedit			# go to the editor right away when composing
set beep_new
set noconfirmappend		# don't ask me if i want to append to mailboxes
set delete=yes			# purge deleted messages without asking
set edit_headers		# let me edit the message header when composing
set include=yes			# always include messages when replying
set nomark_old			# i don't care about whether a message is old
set mime_forward=ask-no		# use message/rfc822 type to forward messages
set move=no			# don't ask about moving messages, just do it
set pager_index_lines=6		# how many index lines to show in the pager
set print_command=/bin/false	# how to print things (I like to save trees)
set query_command="perl ~/mutt_ldap.pl '%s'"
set noprompt_after	# ask me for a command after the external pager exits
set reply_to=yes			# always use reply-to if present
set reverse_name    # use my address as it appears in message
set sort=threads		# primary sorting method
set tilde			# virtual lines to pad blank lines in the pager
set sort_browser=reverse-date	# how to sort files in the dir browser
set xterm_set_titles=yes

# Default
#set status_format="-%r-Mutt: %f [Msgs:%?M?%M/?%m%?n? New:%n?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?  %l]---(%s)-%>-(%P)---"
#set index_format="%4Z %C %{%b %d} %-15.15L (%4c) %s"

set hdr_format="%4C %Z %{%m/%d} %-15.15F (%4c) %s" # format of the index

set status_format="-%r- %f [Msgs:%?M?%M/?%m%?n? New:%n?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?  %l]---(%s)-%>-(%P)---"
set index_format="%4C %Z %{%m.%d} %-9.9v (%4c) %?M?(-%M-) ?%s"

# Header fields
ignore *
unignore	from: subject to cc mail-followup-to \
		date x-mailer x-url # this shows how nicely wrap long lines


# Color definitions
color index default default '.'

color attachment magenta default
color body default default '.'
color bold default default
color error red default
color hdrdefault yellow default
color header blue default '.'
color indicator blue red
color markers cyan default
color message default default
color normal default default
color search default green
color signature default default
color status default blue
color tilde magenta default
color tree magenta default
color underline green default

color quoted0 yellow default
color quoted1 magenta default
color quoted2 green default

color index cyan default '~f echlin'
color header yellow default '^(From|Subject):'
color body magenta default "(ftp|http)://[^ ]+"	# point out URLs
color body magenta default '[-a-z_0-9.]+@[-a-z_0-9.]+'	# e-mail addresses


# attributes when using a mono terminal
#mono header underline ^(From|Subject):
#mono quoted bold

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#
# Key bindings
#
#	maps:
#		alias		alias menu
#		attach		attachment menu
#		browser		directory browser
#		compose		compose menu
#		index		message index
#		pgp		pgp menu
#		postpone	postponed message recall menu
#		generic		generic keymap for all of the above
#		editor		line editor
#		pager		text viewer
#

# emacs-like bindings for moving to top/bottom
bind generic "\e<" first-entry
bind generic \e> last-entry
bind generic { top-page
bind generic } bottom-page
bind generic \177 last-entry
bind editor <delete> backspace
#bind editor <backspace> backspace

# simulate the old browse-url function
macro index \cb |urlview\n
macro index G !imapfilter\n

#macro index \# /bug^M	# search for bugs
#macro index "\""        ":set realname=\"real hairy macro\"^M:set ?realname^M" # and a comment to boot!

# just like vi and less
bind pager G bottom

#macro   pager   \Ck     "|pgp -kaf^M"   # a comment is valid here
#macro pager X "|morepgp^M"	# pipe PGP message to a script




